.nav-bar {
    width: 750rpx;
    height: 80rpx;
    background-color: white;
    color: black;
    padding: 30rpx;
    display: flex;
    justify-content: flex-start;
    border-bottom: 4rpx solid skyblue;
    position: fixed;
    opacity: 1;
    z-index: 1;
}

.back-icon {
    position: absolute;
    top: 65rpx;
    left: 30rpx;
    width: 50rpx;
    height: 50rpx;
    opacity: 0.5;
}

.nav-text {
    position: absolute;
    top: 68rpx;
    left: 100rpx;
    font-size: 30rpx;
}

.title-container {
    padding-top: 15%;
    background-color: white;
    height: 260rpx;
}

.title {
    font-size: 40rpx;
    padding: 40rpx;
    width: 670rpx;
    height: 80rpx;
    background-color: white;
}

.source-container {
    padding: 40rpx;
    display: flex;
    justify-content: space-between;
    font-size: 25rpx;
}

.content-container {
    justify-content: center;
    width: 750rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.news-image {
    width: 670rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.news-content {
    display: flex;
    width: 670rpx;
    padding-left: 20rpx;
}

.news-content-p {
    font-size: 28rpx;
    line-height: 42rpx;
    padding-bottom: 20rpx;
    opacity: 0.9;
}

.news-content-strong {
    font-size: 30rpx;
    line-height: 42rpx;
    font-weight: bold;
    color: darkblue;
    padding: 30rpx;
}

.news-content-img {
    width: 670rpx;
}
