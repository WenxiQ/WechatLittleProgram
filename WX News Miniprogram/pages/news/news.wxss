.nav-bar {
    width: 750rpx;
    height: 80rpx;
    background-color: white;
    color: black;
    padding: 30rpx;
    display: flex;
    justify-content: flex-start;
    border-bottom: 4rpx solid skyblue;
}

.back-icon {
    position: absolute;
    top: 65rpx;
    left: 30rpx;
    width: 50rpx;
    height: 50rpx;
    opacity: 0.5;
}

.nav-text {
    position: absolute;
    top: 68rpx;
    left: 100rpx;
    font-size: 30rpx;
}

.title-container {
    background-color: white;
    height: 260rpx;
}

.title {
    font-size: 40rpx;
    padding: 40rpx;
    width: 700rpx;
    height: 130rpx;
    background-color: white;
}

.source-container {
    padding: 40rpx;
    display: flex;
    justify-content: space-between;
    font-size: 25rpx;
}

.content-container {
    width: 750rpx;
}

.news-image {
    width: 670rpx;
    padding: 40rpx;
}

.news-text {
    margin: 30rpx;
}

.news-text.strong {
    font-weight: bolder;
    color: red;
}
