.nav-bar {
   width: 750rpx;
   height: 80rpx;
   background-color: white;
   color: black;
   padding: 30rpx;
   display: flex;
   justify-content: flex-start;
   border-bottom: 4rpx solid skyblue;
}
.back-icon {
   position: absolute;
   top: 65rpx;
   left: 30rpx;
   width: 50rpx;
   height: 50rpx;
   opacity: 0.5;
}
.nav-text {
   position: absolute;
   top: 68rpx;
   left: 100rpx;
   font-size: 30rpx;
}
.title-container {
   background-color: gainsboro;
   block-size: 350rpx;
   z-index: -1;
}
.title {
   padding: 20rpx;
   position: relative;
   display: flex;
   width: 750rpx;
   height: 200rpx;
   background-color: greenyellow;
}
.source-container {
   padding: 20rpx;
   display: flex;
   justify-content: space-between;
   font-size: 25rpx;
}