.topbar {
  width:  750rpx;
  height: 70rpx;
  display: flex;
  align-content: center;
  background-color: #00B2EE;
  padding-top: 60rpx;
  padding-left: 30rpx;
  color: white;
  font-weight: bolder;
  font-size: 30rpx;
  line-height: 42rpx;
}
.icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.news-types {
  background-color: #00B2EE;
  color: whitesmoke;
  font-size: 30rpx;
  line-height: 42rpx;
  padding-left: 30rpx;
  padding-right:30rpx;
  display: flex;
  flex-wrap: wrap ;
  justify-content: space-between;
}
.frontpage-wrapper {
   position: relative;
   width: 750rpx;
   height: 450rpx;
}
.frontpage-bg {
   position: absolute;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   opacity: 0.3;
   z-index: -2;
}
.frontpage-image {
   position: absolute;
   top: 20rpx;
   left: 20rpx;
   width: 95%;
   height: 92%;
   opacity: 0.9;
   z-index: -1;
   border-radius: 2%;
}
.hot-icon {
   padding: 10rpx;
   border-bottom-left-radius: 40%;
   position: absolute;
   top: 10rpx;
   left: 660rpx;
   font-size: 30rpx;
   line-height: 42rpx;
   color: white;
   background-color: red;
}
.frontpage-heading {
   padding-top: 200rpx;
   padding-left: 30rpx;
}
.frontpage-heading {
   position: absolute;
   display: table-row;
   padding-top: 270rpx;
   padding-left: 70rpx;
   padding-right: 70rpx;
   font-size: 30rpx;
   font-weight: bold;
   line-height: 42rpx;
   color: whitesmoke;
}
.heading-source {
   padding: 10rpx;
   font-size: 25rpx;
   line-height: 30rpx;
   color:gainsboro;
}

.headline-list {
   display: flex;
   height: 100%;
}

.headline-items {
   display: flex;
   height: 100%;
   flex-direction: column;
   width: 130rpx;
   font-size: 36rpx;
   line-height: 42rpx;
   flex-shrink: 0;
}

.swiper-format {
   display: flex;
   justify-content:space-around;
   background-color: greenyellow;
}